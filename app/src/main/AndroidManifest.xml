<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="icechen1.com.blackbox" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.AudioRecordService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver android:name=".receiver.KickstartReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>
                <data android:scheme="package"  />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <data android:scheme="package"  />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <data android:scheme="package"  />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.RecordActivity"
            android:label="@string/title_activity_record"
            android:theme="@style/AppThemeCardText"
            android:launchMode="singleTop">
        </activity>
        <provider
            android:name="icechen1.com.blackbox.provider.BlackBoxProvider"
            android:authorities="icechen1.com.blackbox.provider"
            android:exported="false" />
    </application>

</manifest>
